RewriteEngine On

# 1. Route all requests starting with "projekt/" to router.php
RewriteRule ^projekt/ router.php [L]

# 2. SvelteKit SPA Routing
# If it's not a real file or directory, and NOT an API call, send to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^ index.html [L]

# PHP Settings
# PHP Settings
# Loopia FÃ¶retagspaket Limit: 512MB
php_value upload_max_filesize 512M
php_value post_max_size 512M
php_value memory_limit 512M
php_value max_execution_time 350
php_value max_input_time 1000
